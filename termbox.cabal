name:                termbox
version:             0.1.0.0
synopsis:            Pure Haskell implementation of termbox
-- description:         
license:             MIT
license-file:        LICENSE
author:              Alfredo Di Napoli
maintainer:          alfredo.dinapoli@gmail.com
-- copyright:           
category:            System
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:
    Termbox.API
    Termbox.API.Types
  other-modules:
    Termbox.Internal.Types
  -- other-extensions:    
  build-depends:       
    base >=4.8 && < 5,
    buffer-builder >= 0.2.2.2 && < 0.4,
    io-streams >= 1.0.0.0 && < 1.5.0.0,
    transformers < 0.5,
    bytestring,
    text
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:
    -Wall
    -Werror
    -funbox-strict-fields
    -fwarn-tabs
